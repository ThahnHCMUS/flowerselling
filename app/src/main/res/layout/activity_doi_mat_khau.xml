<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nhập Email: "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Email..."
            android:textSize="15dp"
            android:background="@drawable/editdesign"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nhập mật khẩu cũ: "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <EditText
            android:id="@+id/matkhaucu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password..."
            android:textSize="15dp"
            android:background="@drawable/editdesign"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nhập mật khẩu mới: "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <EditText
            android:id="@+id/matkhaumoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password..."
            android:textSize="15dp"
            android:background="@drawable/editdesign"
            android:inputType="textPassword"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nhập lại mật khẩu mới: "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <EditText
            android:id="@+id/matkhaumoixacnhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password..."
            android:textSize="15dp"
            android:background="@drawable/editdesign"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btndoimatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi Mật Khẩu"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/btndesign"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>

</RelativeLayout>